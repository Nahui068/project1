<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="reservation">
	
	<!-- 예약 -->
	<insert id = "reservationInsert" parameterType="reservation">
		insert into reservation values(#{id},#{r1},#{r2},#{title},#{res_date},#{start_time},#{end_time},#{color})
	</insert>

	<!-- 예약 존재 여부 -->
	<select id="reservationConfirm" resultType="int" parameterType="hashmap">
		select count(*) from reservation where r1=#{r1} and r2=#{r2} and res_date=#{res_date} and start_time=#{start_time}
	</select>
	
	<!-- 예약 내용 가져오기(달력표시) -->
	<select id="reservationSelect" resultType="reservation" parameterType="hashmap">
		select * from reservation where r1=#{r1} and r2=#{r2};
	</select>
	
	<!-- 예약 내용 삭제 -->
	<delete id="reservationDelete" parameterType="reservation">
		delete from reservation where id=#{id} and r2=#{r2} and title=#{title} and res_date=#{res_date} and start_time=#{start_time}
	</delete>
	
	<!-- 예약 내용 보여주기 -->
	<select id="reservationContent" resultType="reservation" parameterType="reservation">
		select * from reservation where id=#{id} and r2=#{r2} and title=#{title} and res_date=#{res_date} and start_time=#{start_time}
	</select>
	
	<!-- 예약 내용 수정 -->
	<update id="reservationUpdate" parameterType="reservation">
		update reservation set title=#{title}, res_date=${res_date}, start_time=#{start_time}, end_time=#{end_time}, color=#{color} where id=#{id}
	</update>
	
</mapper>