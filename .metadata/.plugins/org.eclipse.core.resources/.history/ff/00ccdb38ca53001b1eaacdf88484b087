<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">

	<!-- 회원찾기(로그인) -->
	<select id="memberSelect" resultType="int" parameterType="String">
		select count(*) from member where id=#{id} and pw=#{pw}
	</select>
	
	<!-- 회원등록 -->
	<insert id = "memberInsert" parameterType="member">
		insert into member values(#{name},#{age},#{gender})
	</insert>
	
	<!-- 회원 -->
	<!-- 회원정보 가져오기 -->
	<select id="memberInfo" resultType="member" parameterType="String">
		select * from member where pw=#{pw}
	</select>
	
	<!-- 회원정보 수정 체크 -->
<!-- 	<update id="memberUpdate" parameterType="String ">
		update member set pw=#{pw} where id=#{id};
	</update> -->

</mapper>